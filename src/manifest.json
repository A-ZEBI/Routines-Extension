{
    "name": "Routines Extension",
    "version": "0.1",
    "description": "An extension for triggering Enroll Now button on Udemy site! Test",
    "permissions": ["activeTab", "storage", "declarativeContent"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://www.udemy.com/*", "https://smartybro.com/*"],
        "run_at": "document_idle",
        "js": ["content.js"]
    }],
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2
}